{
    "$schema": "https://json.schemastore.org/eslintrc",
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint/eslint-plugin"],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "env": {
      "node": true,
      "browser": true,
      "es2021": true
    },
    "rules": {
      // Enforce the "TypeScript Strictness" rule from coding_standard.md by forbidding 'any'.
      "@typescript-eslint/no-explicit-any": "error",
  
      // Enforce the "TypeScript Strictness" rule by forbidding non-null assertions ('!').
      "@typescript-eslint/no-non-null-assertion": "error",
  
      // Enforce the "Logging Standard" by flagging 'console.log'.
      // We allow .warn, .error, .info, and .debug to align with structured logging practices.
      "no-console": ["warn", { "allow": ["warn", "error", "info", "debug"] }],
  
      // Prevent unhandled promises, which is critical for a modern async codebase.
      "@typescript-eslint/no-floating-promises": "error",
  
      // Allow unused variables if they are prefixed with an underscore.
      // This is a common and useful convention for function signatures.
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ]
    }
  }